generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Buyer {
    id              Int      @id @default(autoincrement())
    Twitterusername String
    DiscordUsername String
    DiscordInvite   String
    DiscordBot      String
    Reference       String
    createdAt       DateTime @default(now())
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
    role     String
}
